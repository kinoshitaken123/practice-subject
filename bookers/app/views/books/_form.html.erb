<%= form_with model:book,local:true do |f| %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control book_title' %>
  </div>
  <div class="form-group">
    <%= f.label :opinion %>
    <%= f.text_area :body, class: 'form-control book_body' %>
  </div>
  
  <!--星評価機能-->
  <div class ="star-form-group" id="evaluate_stars">
    <label>Rate</label>
     <%= f.hidden_field :book, class: 'star-title' %>
　</div>
  <script>
    $('#evaluate_stars').raty({
     starOn: "<%= asset_path('star-on.png') %>",  //imagesフォルダより星画像の呼び出し
     starOff: "<%= asset_path('star-off.png') %>",
     starHalf: "<%= asset_path('star-half.png') %>",
     scoreName: 'book[evaluation]'  //reviewモデルのcomfortカラムに保存
     //登録するモデル名とカラム名を記述
    });
  </script>
  
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
  
<% end %>
